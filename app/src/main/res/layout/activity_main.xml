<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#5c6bc0">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameRegist"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_edittext_register_login"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.106"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailRegist"
            android:background="@drawable/rounded_edittext_register_login"
            android:hint="Email"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="@+id/usernameRegist"
            app:layout_constraintEnd_toEndOf="@+id/usernameRegist"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/usernameRegist"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/passwordRegist"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.521"
    />
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordRegist"
            android:background="@drawable/rounded_edittext_register_login"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="@+id/emailRegist"
            app:layout_constraintEnd_toEndOf="@+id/emailRegist" app:layout_constraintHorizontal_bias="1.0"
            android:paddingLeft="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/emailRegist"/>
    <Button
            android:text="Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRegist"
            app:layout_constraintTop_toBottomOf="@+id/passwordRegist"
            app:layout_constraintStart_toStartOf="@+id/passwordRegist"
            app:layout_constraintEnd_toEndOf="@+id/passwordRegist"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
    />
    <TextView
            android:text="Already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alreadyhaveaccount_textview" app:layout_constraintStart_toStartOf="@+id/buttonRegist"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/buttonRegist" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonRegist"/>
</android.support.constraint.ConstraintLayout>